  <div class="row">
    <div class="col s12 m7">
      {{#each posts}}
      <div class="card">
        <div class="card-content">
          <p class="card-title">{{post_title}}</p>
          <p>By {{username}} on {{created_at}}</p>
          <p>{{post_content}}</p>
          <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </div>
        <div class="card-action">
          <a href="/post/{{id}}">READ MORE</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
