<section>
  <h2 style="color:#d19fe4; font-weight:bold">Add to the community</h2>
  <p>Ready to share your thoughts with our community? Have a question you want answered? Create a post and share it with our tech family.</p>
<br>
  <form class="new-post-form">
    <div>
      <label for="post-title">Your post's title:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Your post's content:</label>
      <input id="post-content" name="post-content" />
    </div>
    <button type="submit" style="background-color: #e831c3" class="btn">Create</button>
  </form>
  <br>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <div class="row">
      {{#each posts}}
     <div class="col s12 m4 l3">
      <div class="card">
        <div class="card-content">
          <p class="card-title" style="font-weight: bold">{{post.post_title}}</p>
          <p>By {{user.username}} on {{format_date post.created_at}}</p>
          <p>{{post.post_content}}</p>
          <a href="/post/{{post.id}}" style="color:#e831c3">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
        <div class="card-action">
          <a href="/dashboard/edit{{post.id}}" class="edit-link" style="color:#d19fe4">EDIT POST</a>
        </div>
      </div>
      </div>
      {{/each}}
  </div>

</section>
{{/if}}

<script src="/javascript/add-post.js"></script>